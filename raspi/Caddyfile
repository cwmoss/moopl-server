	supervisor {
		php src/watch/watch_mpd.php
		php src/watch/watch_renderer.php
	}

	frankenphp {
		#worker /path/to/your/worker.php
		{$FRANKENPHP_CONFIG}
		worker {
			file public/index.php
			watch src
		}
	}
}

{$CADDY_EXTRA_CONFIG}

http://{$SERVER_NAME:localhost}, http://localhost {
	
	# tls internal

	#log {
