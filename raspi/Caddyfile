	{$CADDY_SERVER_EXTRA_DIRECTIVES}

	handle /api/* {
		php_server
	}

	handle /$images/* {
		uri strip_prefix /$images
		root var/images/
		image_processor
		file_server 
	}

	handle {
		root * frontend/
